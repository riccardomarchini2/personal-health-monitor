<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin">

    <TextView
        android:id="@+id/health_parameter_name_text_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/health_parameter_name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/health_parameter_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/health_parameter_name_text_view_label"
        app:layout_constraintStart_toEndOf="@+id/health_parameter_name_text_view_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/health_parameter_name_priority_text_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/priority"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_parameter_name_text_view" />

    <TextView
        android:id="@+id/health_parameter_name_priority_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/health_parameter_name_priority_text_view_label"
        app:layout_constraintStart_toStartOf="@+id/health_parameter_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/health_parameter_name_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>